<div class="col-md-4 mx-auto mt-5">
    <div class="card">
        <div class="card-header bg-dark text-center">
            <h3 class="text-white">Editar Proveedor</h3>
        </div>
        <div class="card-body">
            <form action="/proveedores/edit-proveedor/{{proveedor._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT" />
                <div class="mb-3">
                    <label for="title">Title:</label>
                    <input type="text" name="title" class="form-control" placeholder="Title" value="{{proveedor.title}}" />
                </div>
                <div class="mb-3">
                    <label for="description">Description:</label>
                    <textarea name="description" class="form-control"
                        placeholder="Description">{{proveedor.description}}</textarea>
                </div>
                <button class="btn btn-primary w-100 fw-bold" type="submit">
                    Guardar
                </button>
            </form>
        </div>
    </div>
</div>