{{#if proveedores}}

<div class="row mt-3">
    <div class="bg-white p-0">
        <h1 class="text-center fw-bold bg-dark text-white py-2 text-uppercase">Proveedores</h1>

        <div class="row justify-content-center mt-3">

            <div class="col-12 col-md-3 text-center mb-3 mb-md-0">
                <a href="/proveedores/add"
                    class="btn btn-primary fw-bold rounded py-3 px-5 fs-3 px-md-3 px-lg-5">Agregar</a>
            </div>

            <div class="col-12 col-md-3 mb-3 mb-md-0">
                <label for="SelectCategory" class="form-label fw-bold">Categor√≠a:</label>
                <select id="SelectCategory" class="form-select">
                    <option value="Todos" selected>Todos</option>
                    {{#each proveedorDefaultTypes}}
                    <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="col-12 col-md-5">
                <label for="searchInput" class="form-label fw-bold">Buscar:</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="searchInput" placeholder="Buscar proveedor..." />
                </div>
            </div>
        </div>

        {{!-- cards Proveedores --}}
        <div class="row col-12 border-2 border-top mx-auto mt-3 bg-light" id="proveedoresContainer">
            {{#each proveedores}}
            <div class="proveedor col-md-6 col-lg-4 mt-4">
                <div class="card h-100" data-name="{{name}}" data-category="{{category}}">
                    <div class="card-header d-flex flex-row align-items-center justify-content-between">
                        <div>
                            <h5 class="text-capitalize fw-bold">{{ name }}</h5>
                            <h6 class="text-capitalize">{{ category }}</h6>
                        </div>
                        <a class="text-primary" href="/proveedores/edit/{{_id}}"><i class="fas fa-edit fa-2x"></i></a>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <div>
                            <p class="me-2 fw-bold ">Detalles:</h5>
                            <div class="mt-1">
                                <i class="fa fa-phone fa-flip-horizontal me-2" aria-hidden="true"></i>
                                {{#if phone}}
                                {{phone}}
                                {{else}}
                                Indefinido
                                {{/if}}
                            </div>
                            <div class="mt-1">
                                <i class="fa fa-address-book me-2" aria-hidden="true"></i>
                                {{#if address}}
                                {{address}}
                                {{else}}
                                Indefinido
                                {{/if}}
                            </div>
                            <div class="mt-1">
                                <i class="fa fa-envelope me-2" aria-hidden="true"></i>
                                {{#if email}}
                                {{email}}
                                {{else}}
                                Indefinido
                                {{/if}}
                            </div>
                            {{#if description}}
                            <div class="my-2 mx-4 p-1 bg-light card-with-description">
                                <div class="flex-grow-1">{{description}}</div>
                            </div>
                            {{else}}
                            <div class="my-2 mx-4 p-1 bg-light card-with-description">
                                <div class="flex-grow-1"></div>
                            </div>
                            {{/if}}

                        </div>
                        <!-- DELETE REQUEST -->
                        <div class="mt-auto">
                            <form action="/proveedores/delete/{{_id}}?_method=DELETE" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-danger rounded fw-bold">Eliminar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
{{else}}
<div class="col-12 col-md-10 card my-2 py-5 mx-auto bg-dark">
    <div class="card-body text-center">
        <h1 class="display-3 fw-bold text-capitalize text-white">Hola {{username}}</h1>
        <p class="lead fs-3 text-white">Aun no tienes proveedores.</p>
        <a href="/proveedores/add" class="btn btn-primary p-4 text-white fw-bold fs-4 rounded">Agrega uno
            ahora!</a>
    </div>
</div>
{{/if}}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/js/filterProveedor.js"></script>