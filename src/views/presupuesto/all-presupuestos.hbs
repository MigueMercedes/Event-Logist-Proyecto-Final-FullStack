<div class="row justify-content-center">
    {{#if presupuesto}}
    <div class="text-center col-12">
        <a href="/presupuesto/add" class="btn btn-primary p-4 text-light fw-bold fs-4 rounded">Agregar presupuesto</a>
    </div>

    <div class="row justify-content-center mt-4">
        {{!-- Buscador --}}
        <div class="col-6">
            <form>
                <input type="search" id="searchPresupuesto" class="form-control" placeholder="Buscar">
            </form>
        </div>

        {{!-- Buscar por categoria --}}
        <div class="col-2">
            <select class="form-select" id="filterPresupuesto">
                <option value="#" selected>Filtrar por Tipo</option>
                <option value="#">Boda</option>
                <option value="#">Baby Shower</option>
                <option value="#">Cumplea√±os</option>
                <option value="#">Graduacion</option>
                <option value="#">Otras</option>
            </select>
        </div>
    </div>

    {{!-- Table Presupuesto --}}
    <div class="table-responsive mt-4">
        <table class="table table-striped table-light presupuesto-index">
            <tr>
                <th>#</th>
                <th>Fecha</th>
                <th>Actividad</th>
                <th>Tipo</th>
                <th>Cliente</th>
                <th>Estado</th>
                <th>Costo</th>
                <th class="text-center">Opciones</th>
            </tr>
            {{#each presupuesto}}
            <tr>
                <th>{{incrementIndex @index}}</th>
                <td>{{dateActivity}}</td>
                <td>{{nameActivity}}</td>
                <td>{{typeActivity}}</td>
                <td>{{nameClient}}</td>
                <td>{{status}}</td>
                <td>{{presupuestoData.totalPrice}}</td>
                <td>
                    <div class="d-flex d-flex align-items-center justify-content-evenly gap-1 ps-3">
                        <a class="border-0 bg-transparent" href="/presupuesto/print/{{_id}}"><i class="fa fa-eye text-success fa-lg"></i></a>
                        <a class="border-0 bg-transparent" href="/presupuesto/edit/{{_id}}"><i
                                class="fas fa-edit fa-lg text-primary"></i></a>
                        <!-- DELETE REQUEST -->
                        <form action="/presupuesto/delete/{{_id}}?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="border-0 bg-transparent">
                                <i class="fas fa-trash fa-lg text-danger"></i>
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>


{{else}}
<div class="col card my-5 py-5 mx-auto bg-dark">
    <div class="card-body text-center">
        <h1 class="display-4 fw-bold text-light">Aun no haz creado <br>un presupuesto</h1>
        <p class="lead fs-3 text-light"></p>
        <a href="/presupuesto/add" class="btn btn-primary p-4 text-light fw-bold fs-4 rounded">Crea uno
            ahora!</a>
    </div>
</div>
{{/if}}
</div>